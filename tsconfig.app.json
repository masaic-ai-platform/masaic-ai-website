{
  "compilerOptions": {
    /* Targeting modern JS */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* Module system */
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,

    /* React JSX setup */
    "jsx": "react-jsx", // Enables new JSX transform (no need to import React)
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true, // Recommended with allowSyntheticDefaultImports

    /* Class field behavior */
    "useDefineForClassFields": true,

    /* Project structure */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Isolated files for Vite/ESBuild/etc. */
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",

    /* Type safety - relaxed per your config */
    "skipLibCheck": true,
    "strict": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitAny": false,
    "noFallthroughCasesInSwitch": false
  },
  "include": ["src"]
}
